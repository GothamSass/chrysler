
h2 Upcoming Events

for event, slug in public.events.event._data
  if event.layout !== false
    .gotham-sass--event
      h1.event-name: a(href="/events/event/#{slug}")= event.name
      p #{event.description}
        time.dt-start(datetime="2013-06-30 12:00")
          sup #{event.start_date}
        time.dt-end(datetime="2013-06-30 18:00")
          sup #{event.end_date}
        span.p-location #{event.venue.name}

h2 Past Events

for event in public.events.past._data.results
  .gotham-sass--event
    h3= event.name
    div !{event.description}

